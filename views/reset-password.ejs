<%- include('header.ejs') %>

<form action="/reset-password" method="post">
    <ul>
        <li> 아이디 : <input type="text" name="username" required></li>

        <!-- 비밀번호 재설정 질문 선택 -->
        <li>
            비밀번호 재설정 질문 :
            <!-- 사용자가 선택할 수 있는 질문들을 dropdown 메뉴로 제공 -->
            <select name='selectedQuestionIndex'>
                <% for(var i=0; i<resetQuestions.length; i++) {%>
                <!-- 각 option의 value는 해당 질문의 인덱스 -->
                <!-- 사용자가 선택한 option의 value는 req.body.selectedQuestionIndex로 접근 가능-->
                <option value="<%=i%>"><%= resetQuestions[i] %></option>
                <% } %>
            </select>
        </li>

        <!-- 비밀번호 재설정 답변 입력 -->
        <li>
            답변 :
            <!-- 사용자가 답변을 입력할 수 있는 텍스트 필드 제공 -->
            <!-- 사용자가 입력한 답변은 req.body.answer로 접근 가능-->
            <input type='text' name='answer' required />
        </li>

        <!-- 새 비밀번호 입력 필드 추가 -->
        <li> 새 비밀번호 : <input type="password" name="newPassword" required ></li>

        <button type = "submit">비밀번호 변경</button>
    </ul>
</form>


<%-include('footer.ejs')%>
